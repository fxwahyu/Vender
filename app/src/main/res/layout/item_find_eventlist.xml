<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    cardview:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/event_tn"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nama_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAMA EVENT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/kotalabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_event"
                    android:text="Lokasi : "
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/kota_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_event"
                    android:layout_toRightOf="@id/kotalabel"
                    android:text="Lokasi"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tanggal_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="10sp"
                    android:layout_below="@id/kota_event"/>

                <TextView
                    android:id="@+id/lowongan_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lowongan"
                    android:textSize="10sp"
                    android:layout_below="@id/tanggal_event"
                    android:layout_marginBottom="10dp"/>


            </RelativeLayout>


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>