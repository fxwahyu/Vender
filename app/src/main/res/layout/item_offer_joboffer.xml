<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/event_tn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/foto2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nama_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAMA EVENT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/kotalabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_event"
                    android:text="Lokasi : "
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/kota_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nama_event"
                    android:layout_toRightOf="@id/kotalabel"
                    android:text="Lokasi"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tanggal_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="10sp"
                    android:layout_below="@id/kota_event"/>


            </RelativeLayout>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>