<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:titleTextColor="#FFFFFF" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota" />

                <Spinner
                    android:id="@+id/spinner_kota"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Skill" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkBox_penyanyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Penyanyi" />

                        <CheckBox
                            android:id="@+id/checkBox_pemainmusik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pemain Musik" />

                        <CheckBox
                            android:id="@+id/checkBox_penari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Penari" />

                        <CheckBox
                            android:id="@+id/checkBox_fotografer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fotografer" />

                        <CheckBox
                            android:id="@+id/checkBox_sulap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pesulap/Badut" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkBox_grup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Band/Vocal Group" />

                        <CheckBox
                            android:id="@+id/checkBox_mc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MC" />

                        <CheckBox
                            android:id="@+id/checkBox_dj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="104dp"
                            android:text="DJ" />

                        <CheckBox
                            android:id="@+id/checkBox_videografer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Videografer" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Bio" />

                <EditText
                    android:id="@+id/talent_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Experience" />

                <EditText
                    android:id="@+id/portofolio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Instagram ID" />

                <EditText
                    android:id="@+id/instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Link youtube" />

                <EditText
                    android:id="@+id/youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Expected Salary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Rp" />

                    <EditText
                        android:id="@+id/min_fee"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="-" />

                    <EditText
                        android:id="@+id/max_fee"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:inputType="number" />
                </LinearLayout>


                <Button
                    android:id="@+id/button_talent_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/custom_blue_button"
                    android:text="Register"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="312dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
